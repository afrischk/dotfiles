[battery]
command=$SCRIPT_DIR/battery2/battery2
interval=30
markup=pango

[time]
command=TZ=":Europe/Berlin" date '+%I:%M %Z'
interval=1

[date]
command=date '+%d/%m/%Y'
interval=60
