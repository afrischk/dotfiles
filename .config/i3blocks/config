[arch-update]
command=$SCRIPT_DIR/arch-update/arch-update
interval=once

[bandwidth]
command=$SCRIPT_DIR/bandwidth2/bandwidth2 
interval=persist
label=

[disk]
command=df -h / | awk '$NF=="/"{printf "%s\n", $5}'
interval=3
label=SSD: 

[memory]
command=free -m | awk 'NR==2{printf "%.2f%%\n", $3*100/$2 }'
interval=2
label=MEM: 

